<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EarthquakeViewer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_light_1000</item>
        <item name="colorSecondary">@color/blue_light_500</item>
        <item name="colorTertiary">@color/blue_light_100</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.EarthquakeViewer" parent="Base.Theme.EarthquakeViewer" />

    <style name="ItemEarthquake">
        <item name="android:background">@drawable/main_gradient</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/background_light_theme</item>
    </style>

    <style name="MainMountain">
        <item name="android:src">@drawable/bg_home_white</item>
    </style>

    <style name="MainCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_light_theme</item>
        <item name="cardElevation">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">40dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppinsextrabold</item>
        <item name="rippleColor">@color/shimmer_color</item>
    </style>

</resources>